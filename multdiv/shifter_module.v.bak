module shifter_module(in,out,ctrl_shift);
	//the ctrl_shift is multiplied by 2
	input[31:0] in;
	input[2:0] ctrl_shift;
	output[31:0] out;
	
	
	wire[7:0] one_hot_decoding;
	assign one_hot_decoding = 1 << ctrl_shift;
	
	wire[31:0] shifter_wire_array[7:0];
	
	genvar index;
	generate
	for(index=0; index<8; index=index+1) begin: loop_shifter
		assign shifter_wire_array[index] = in << (2*index);
	end
	endgenerate
	
endmodule